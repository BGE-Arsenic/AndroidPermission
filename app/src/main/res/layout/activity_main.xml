<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arsenic.demo.androidpermission.MainActivity">

    <Button
        android:id="@+id/tv_camera_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相机权限"/>

    <Button
        android:id="@+id/tv_contact_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_camera_permission"
        android:text="手机通讯录权限"/>

    <Button
        android:id="@+id/tv_sms_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contact_permission"
        android:text="手机短信权限"/>

    <Button
        android:id="@+id/tv_phone_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sms_permission"
        android:text="手机电话权限"/>
</RelativeLayout>
